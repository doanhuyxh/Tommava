@model List<TimeLineVideo>
@{
    int i = 0;
}
@if (Model != null && Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th class="text-center" scope="col">Thời gian</th>
                <th class="text-center" scope="col">Nội dung tiếng việt</th>
                <th class="text-center" scope="col">Nội dung Tiếng anh</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <th scope="row">@i</th>
                    <td class="text-center">@item.TimePoint</td>
                    <td class="text-center">@item.Vietnamese</td>
                    <td class="text-center">@item.English</td>
                    <td>
                        <span class="btn btn-warning" onclick="EditTimeLine(@item.Id)">Cập nhật</span>
                        <span class="btn btn-danger" onclick="DeleteTimeLine(@item.Id)">Xóa</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <p>Danh sách trống</p>
}
