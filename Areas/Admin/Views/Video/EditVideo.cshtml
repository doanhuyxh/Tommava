@model Tommava.Models.videoVM.VideoVM;
@{
    Layout = null;
}
<form id="form_video">
    <input hidden asp-for="Id" />
    <input hidden asp-for="CreatedDate" />
    <input hidden asp-for="Img" />
    <input hidden asp-for="IsActive" />
    <input hidden asp-for="IsHome" />
    <input hidden asp-for="ViewCount" />


    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameVn" class="control-label"></label>
        <input asp-for="NameVn" class="form-control" onkeyup="HandleChangeNameVn(event)" />
        <span asp-validation-for="NameVn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug" class="control-label"></label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="form-label"></label>
        <div class="container">
            <select asp-for="CategoryId" asp-items="@ViewBag.Cate" class="form-control" onchange="HandleCategory(event)">
                <option value="0" selected disabled>--- Không  ---</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SubCategoryId" class="form-label"></label>
        <div class="container">
            <select asp-for="SubCategoryId" class="form-control">
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="form-label"></label>
        <div class="container">
            <select asp-for="GenreId" asp-items="@ViewBag.Genre" class="form-control">
                <option value="0" selected disabled>--- Không  ---</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ImgFile" class="control-label"></label>
        <input asp-for="ImgFile" class="form-control" />
        <span asp-validation-for="ImgFile" class="text-danger"></span>
    </div>
   @* <div class="form-group">
        <label asp-for="ShortDescription" class="control-label"></label>
        <input asp-for="ShortDescription" class="form-control" />
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>*@
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" v-model="ckName"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

</form>

<script src="/js/config_ckeditor.js"></script>
<script>
    var form_video = new Vue({
        el: "#form_video",
        data: {
            ckName: ""
        },
        mounted() {
            configureCKEditor('#Description', this, this.ckName || {});

        }
    })
</script>



