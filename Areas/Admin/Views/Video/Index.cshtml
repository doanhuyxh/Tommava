

<div id="AppVueVideo">
    <div class="row">
        <div class="col-12 row">
            <div class="col-3"><div v-on:click="AddVideo()" class="btn btn-success">Thêm video</div></div>
        </div>
        <div class="container col-12">
            <table class="table table-striped" id="tableVideo">
                <thead class="text-dark table-light">
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center text-nowrap">Tên tiếng anh</th>
                        <th class="text-center text-nowrap">Tên tiếng việt</th>
                        <th class="text-center text-nowrap">Slug</th>
                        <th class="text-center text-nowrap">Ảnh đại diện</th>
                        <th class="text-center text-nowrap">Video</th>
                        <th class="text-center text-nowrap">TimeLine</th>
                        <th class="text-center text-nowrap">Thể loại</th>
                        <th class="text-center text-nowrap">Danh mục</th>
                        <th class="text-center text-nowrap"></th>
                    </tr>
                </thead>
                <tr v-for="(item, index) in data">
                    <td class="text-center">{{index+1}}</td>
                    <th class="text-center text-wrap">{{item.name}}</th>
                    <th class="text-center text-wrap">{{item.nameVn}}</th>
                    <th class="text-center text-wrap">{{item.slug}}</th>
                    <th class="text-center"><span class="btn btn-info opacity-5" v-on:click="ViewImg(item.img)"><i class="fa-solid fa-image" style="color: #1f5129;"></i></span></th>
                    <th class="text-center"><span class="btn btn-info opacity-5" v-on:click="ViewVideo(item.videoLink)"><i class="fa-solid fa-photo-film" style="color: #1f5129;"></i></span></th>
                    <th class="text-center"><span class="btn btn-info opacity-5" v-on:click="ViewTimeLine(item.id)"><i class="fa-solid fa-timeline" style="color: #e62828;"></i></span></th>
                    <th class="text-center text-wrap">{{item.genreName}}</th>
                    <th class="text-center text-wrap">{{item.categoryName}}</th>
                    <td class="text-center text-nowrap">
                        <span class="btn btn-warning" v-on:click="EditVideo(item.id)">Cập nhật</span>
                        <span class="btn btn-danger" v-on:click="DeleteVideo(item.id)">Xóa</span>
                    </td>
                </tr>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="ModalTimeLine" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Timeline video</h5>
                    <div>
                        <button type="button" class="btn btn-success" v-on:click="AddTimeLine">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                        <button type="button" class="btn btn-success" v-on:click="AddTimeLineExcel">
                            <i class="fa-regular fa-file-excel" style="color: #0e620f;"></i>
                        </button>
                    </div>
                </div>
                <div class="modal-body" id="ModalTimeLineContent">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalAddTimeLine" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAddTimeLineTitle">TimeLine</h5>
                </div>
                <div class="modal-body" id="ModalAddTimeLineContent">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" v-on:click="SaveTimeLine()">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalAddTimeLineExcel" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAddTimeLineTitleExcel">TimeLine</h5>
                    <button type="button" class="btn btn-success" v-on:click="DonwloadExcel">
                        <i class="fa-solid fa-download" style="color: #18af2a;"></i>
                    </button>
                </div>
                <div class="modal-body" id="ModalAddTimeLineContentExcel">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" v-on:click="SaveTimeLineExcel()">Lưu</button>
                </div>
            </div>
        </div>
    </div>


</div>
<script>

    var AppVueVideo = new Vue({
        el: "#AppVueVideo",
        data: {
            data: [],
            currentVideoId: 0,
            ckName : "",
        },
        computed: {

        },
        mounted() {
            this.initData();

        },
        methods: {
            initData() {
                fetch("/Admin/Video/GetData")
                    .then(res => res.json())
                    .then(data => {
                        console.log(data.object)
                        this.data = data.object;
                    })
            },
            AddVideo() {
                $("#BigModelContent").load(`/Admin/Video/AddVideo`, function () {
                    $("#staticBigModel").modal("show");
                    $("#staticBigModellTitle").html("Thêm danh mục mới")
                })
            },
            EditVideo(id) {
                $("#BigModelContent").load(`/Admin/Video/EditVideo?id=${id}`, function () {
                    $("#staticBigModel").modal("show");
                    $("#staticBigModellTitle").html("Cập nhật danh mục")
                })
            },
            DeleteVideo(id) {
                let custhis = this;
                Swal.fire({
                    title: 'Bạn có chắc chắn muốn xóa ?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xóa',
                    showCancelButton: true,
                    cancelButtonText: "Hủy",
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Admin/Video/DeleteVideo?id=${id}`, {
                            method: "DELETE"
                        })
                            .then(res => res.json())
                            .then(data => {
                                if (data.statusCode) {
                                    Swal.fire({
                                        position: 'center',
                                        icon: 'success',
                                        title: "Thành công",
                                        showConfirmButton: false,
                                        timer: 1500
                                    }).then((res) => { custhis.initData() });
                                }
                            })
                    }
                })
            },
            ViewImg(src) {
                Swal.fire({
                    imageUrl: `${src}`,
                    imageWidth: 400,
                })
            },
            ViewVideo(src) {
                console.log(src)
                Swal.fire({
                    html: `<video controls style=" width: 100%;height: auto;">
                                                              <source src="${src}" type="video/mp4">
                                                    </video>`,
                    imageWidth: 1000,
                })
            },
            ViewTimeLine(videoId) {
                if (videoId != undefined) {
                this.currentVideoId = videoId;
                }
                $("#ModalTimeLineContent").load(`/Admin/Video/TimeLine?videoid=${this.currentVideoId}`, function () {

                    $("#ModalTimeLineTitle").html("Time line video");
                    $("#ModalTimeLine").modal("show");
                })
            },
            AddTimeLine() {
                $("#ModalAddTimeLineContent").load(`/Admin/Video/AddTimeLine`, function () {
                    $("#ModalAddTimeLineTitle").html("Thêm mới");
                    $("#ModalAddTimeLine").modal("show");
                })
            },
            AddTimeLineExcel() {
                $("#ModalAddTimeLineContentExcel").load(`/Admin/Video/AddTimeLineExcel`, function () {
                    $("#ModalAddTimeLineTitleExcel").html("Thêm mới");
                    $("#ModalAddTimeLineExcel").modal("show");
                })
            },
            SaveTimeLine() {
                let _timeline = new FormData();
                _timeline.append("Id", $("#Id").val())
                _timeline.append("CreatedDate", $("#CreatedDate").val())
                _timeline.append("TimePoint", $("#TimePoint").val())
                _timeline.append("Vietnamese", $("#Vietnamese").val())
                _timeline.append("English", $("#English").val())
                _timeline.append("VideoId", this.currentVideoId)
                _timeline.append("IsDeleted", false)

                fetch("/Admin/Video/SaveTimeLine", {
                    method: "POST",
                    headers: {
                        processData: false,
                        contentType: false,
                    },
                    body: _timeline
                })
                    .then(res => res.json())
                    .then(res => {
                        $('#ModalAddTimeLine').modal('hide');
                        console.log(res)
                        Swal.fire({
                            title: "Thành công",
                            icon: 'info',
                        }).then(res => {
                            this.ViewTimeLine(this.currentVideoId);
                        });
                    })
            },
            SaveTimeLineExcel() {
                let _data = new FormData();
                for (let i = 0; i < TimeLineExcel.$data.data.length; i++) {
                    _data.append(`vm[${i}][Id]`, 0)
                    _data.append(`vm[${i}][TimePoint]`, TimeLineExcel.$data.data[i].Time)
                    _data.append(`vm[${i}][Vietnamese]`, TimeLineExcel.$data.data[i].SubVN)
                    _data.append(`vm[${i}][English]`, TimeLineExcel.$data.data[i].SubEN)
                    _data.append(`vm[${i}][VideoId]`, this.currentVideoId)
                }

                fetch("/Admin/Video/SaveTimeLineRange", {
                    method: "POST",
                    headers: {
                        processData: false,
                        contentType: false,
                    },
                    body: _data
                })
                    .then(res => res.json())
                    .then(res => {
                        $("#ModalAddTimeLineExcel").modal("hide");
                    })
            },
            DonwloadExcel() {
                const fileUrl = '/upload/excel/Book1.xlsx';
                const link = $('<a>', {
                    href: fileUrl,
                    download: 'Example.xlsx'
                }).appendTo('body');
                link[0].click();
                link.remove();

            }
        }
    })


    function Save() {
        let _data = new FormData()
        _data.append("Id", $("#Id").val())
        _data.append("ViewCount", $("#ViewCount").val())
        _data.append("CreatedDate", $("#CreatedDate").val())
        _data.append("Img", $("#Img").val())
        _data.append("VideoLink", $("#VideoLink").val())
        _data.append("IsActive", $("#IsActive").val())
        _data.append("IsHome", $("#IsHome").val())
        _data.append("Name", $("#Name").val())
        _data.append("Description", form_video.$data.ckName)
        _data.append("CategoryId", $("#CategoryId").val())
        _data.append("NameVn", $("#NameVn").val())
        _data.append("Slug", $("#Slug").val())
        _data.append("GenreId", $("#GenreId").val())
        _data.append("ImgFile", document.getElementById("ImgFile").files[0])
        _data.append("VideoFile", document.getElementById("VideoFile").files[0])

        fetch("/Admin/Video/AddEditVideo", {
            method: "POST",
            headers: {
                processData: false,
                contentType: false,
            },
            body: _data
        })
            .then(res => res.json())
            .then(res => {
                $('#staticBigModel').modal('hide');
                console.log(res)
                Swal.fire({
                    title: "Thành công",
                    icon: 'info',
                }).then(res => {
                    AppVueVideo.initData();
                });
            })
    }

    function DeleteTimeLine(videoid) {
        Swal.fire({
            title: 'Bạn có chắc chắn muốn xóa ?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa',
            showCancelButton: true,
            cancelButtonText: "Hủy",
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/Admin/Video/DeleteTimeLine?id=${videoid}`, {
                    method: "DELETE"
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.statusCode) {
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: "Thành công",
                                showConfirmButton: false,
                                timer: 1500
                            }).then((res) => { 

                                AppVueVideo.ViewTimeLine()
                            });
                        }
                    })
            }
        })
    }

    function EditTimeLine(videoid) {
        $("#ModalAddTimeLineContent").load(`/Admin/Video/EditTimeLine?id=${videoid}`, function () {
            $("#ModalAddTimeLineTitle").html("Cập nhật");
            $("#ModalAddTimeLine").modal("show");
        })
    }

    function HandleCategory(e){
        let cateid = e.target.value;
        const select = document.getElementById("SubCategoryId");
        select.innerHTML = '';
         fetch(`/Admin/SubCategory/GetSubCategoryByCategoryId?id=${cateid}`)
         .then(res=>res.json())
         .then(data=>{
             console.log(data)

            let op1 = document.createElement("option");
            op1.value = "0"
            op1.innerHTML= "--không--"
            op1.disabled = true;
            op1.selected = true;
            select.appendChild(op1)
             for(let i = 0; i<data.object.length; i++){
                 let op = document.createElement("option");
            op.value = data.object[i].id
            op.innerHTML= data.object[i].subName
            select.appendChild(op)
             }
         })
    }

    function HandleChangeNameVn(e){
        let text = e.target.value;

        let str = text.normalize('NFD').replace(/[\u0300-\u036f]/g, '');

        const replacements = {
            "đ": "d",
            "Đ": "D"
        };

        str = str
            .replace(/đ/g, 'd')
            .replace(/Đ/g, 'D')
            .toLowerCase()
            .replace(/ /g, '-')
            .replace(/[^\w-]+/g, '');
        document.getElementById("Slug").value = str;
    }

</script>