@model List<Tommava.Models.videoVM.VideoVM>

@foreach (var item in Model)
{
    <h1></h1>
    <div class="col-6 col-md-3 col-xl-3 mb-4">
        <a href="#">
            <div class="card" style="width: 18rem;">
                <img src="@item.Img"
                     class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title mt-3 title-video">@item.Name</h5>
                    <p class="card-text eng-title">
                        @item.Description
                    </p>
                    <div class="card-text d-flex justify-content-between sub-eng">
                        <div>
                            708 lượt xem
                        </div>
                        <div>
                            @item.CategoryName
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
}